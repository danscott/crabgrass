<h4>New Pages</h4>
<% 
  pages = Page.find_by_path('/descending/created_at/limit/10',options_for_group(@group))
  columns = [:icon, :title, :created_by, :created_at, :contributors_count]
-%>
<%= render :partial => 'pages/list/table', :locals => {:pages => pages, :columns => columns} %>

<%= link_to 'more &raquo;', groups_url(:id => @group, :action => 'search') + "/descending/created_at" %>
